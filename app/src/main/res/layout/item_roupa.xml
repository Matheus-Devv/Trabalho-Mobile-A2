<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false">

    <ImageView
        android:id="@+id/roupa_imagem"
        android:layout_width="198dp"
        android:layout_height="195dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:longClickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/casaco" />

    <TextView
        android:id="@+id/roupa_nome"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="6dp"
        android:text="Nome"
        app:layout_constraintStart_toEndOf="@+id/roupa_imagem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/roupa_tamanho"
        android:layout_width="130dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Tamanho"
        app:layout_constraintStart_toEndOf="@+id/roupa_imagem"
        app:layout_constraintTop_toBottomOf="@+id/roupa_nome" />

    <TextView
        android:id="@+id/roupa_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Preco"
        app:layout_constraintStart_toEndOf="@+id/roupa_imagem"
        app:layout_constraintTop_toBottomOf="@+id/roupa_tamanho" />

</androidx.constraintlayout.widget.ConstraintLayout>