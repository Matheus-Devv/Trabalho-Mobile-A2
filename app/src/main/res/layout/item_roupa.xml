<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/roupa_imagem"
        android:layout_width="198dp"
        android:layout_height="195dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/casaco" />

    <TextView
        android:id="@+id/roupa_nome"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="6dp"
        android:text="Casaco"
        app:layout_constraintStart_toEndOf="@+id/roupa_imagem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/roupa_tamanho"
        android:layout_width="130dp"
        android:layout_height="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="47dp"
        android:text="Tamanho"
        app:layout_constraintStart_toEndOf="@+id/roupa_imagem"
        app:layout_constraintTop_toBottomOf="@+id/roupa_nome" />

    <view
        android:id="@+id/view"
        class="androidx.appcompat.widget.ActionMenuView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roupa_imagem" />
</androidx.constraintlayout.widget.ConstraintLayout>